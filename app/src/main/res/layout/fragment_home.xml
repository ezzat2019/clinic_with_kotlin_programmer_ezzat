<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/home_relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <TextView
                android:id="@+id/txt_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:text="Clinics"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/home_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_s"
                android:layout_marginTop="8dp"
                android:fitsSystemWindows="true" />


            <TextView
                android:id="@+id/txt_s2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_rec"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:text="Top Rated"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/home_rec_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_s2"
                android:layout_marginTop="8dp"
                android:fitsSystemWindows="true" />
        </RelativeLayout>

    </ScrollView>


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"

        />


</RelativeLayout>