<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="190dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="8dp"
    android:elevation="16dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_home"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@drawable/profile" />

        <RatingBar
            android:id="@+id/rate_home"
            style="@android:style/Widget.Holo.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_home"
            android:layout_alignParentRight="true"


            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:indeterminate="false"
            android:numStars="5"
            android:rating="2" />

        <TextView
            android:id="@+id/txt_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rate_home"
            android:layout_marginLeft="8dp"
            android:text="Clinic Name"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="18sp"

            />

        <TextView
            android:id="@+id/txt_homename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_s"
            android:layout_marginLeft="8dp"
            android:singleLine="true"
            android:text="3 Giza flat 5 Wow street"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"

            />

        <View
            android:id="@+id/v_home"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/txt_homename"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/txt_home_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_home"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="03:00-10:00 am"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="16sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_home"
            android:layout_marginTop="8dp"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/txt_home_time"
            android:background="@drawable/ic_access_time_black_24dp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
