<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".ui.fragment.doctor.DoctorFragment">

    <ScrollView
        android:id="@+id/cc"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffff">

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_24sdp"
                android:background="@color/colorAccent"
                android:elevation="@dimen/_8sdp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/_16sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:elevation="@dimen/_8sdp">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/img_doctor2"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:src="@drawable/clinic_icon2"
                        app:civ_border_color="@color/colorAccent"
                        app:civ_border_width="@dimen/_4sdp"
                        app:civ_shadow="true"
                        app:civ_shadow_color="@color/colorAccent"
                        app:civ_shadow_radius=".1" />

                    <TextView
                        android:id="@+id/txt_doctor_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_toRightOf="@id/img_doctor2"
                        android:text="Clinic Name"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_doctor_spec2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_doctor_name2"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_toRightOf="@id/img_doctor2"
                        android:text="spec"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="18sp" />

                    <RatingBar
                        android:id="@+id/rate_doctor2"
                        style="@android:style/Widget.Holo.RatingBar.Indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_doctor_spec2"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_toRightOf="@id/img_doctor2"
                        android:indeterminate="false"
                        android:numStars="5"
                        android:rating="0" />

                    <TextView
                        android:id="@+id/txt_doctor_exp_s2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_doctor2"
                        android:layout_marginLeft="@dimen/_24sdp"
                        android:layout_marginTop="@dimen/_24sdp"
                        android:text="Experience"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txt_doctor_exp2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_doctor_exp_s2"
                        android:layout_marginLeft="@dimen/_48sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:text="5 year"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txt_doctor_rate_s2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_doctor2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_24sdp"
                        android:text="Ratings"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txt_doctor_rate2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_doctor_rate_s2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="0.0"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txt_doctor_book_s2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_doctor2"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/_24sdp"
                        android:layout_marginRight="@dimen/_32sdp"
                        android:text="Books"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txt_doctor_book2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_doctor_book_s2"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_48sdp"
                        android:text="130"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="20sp" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txt_doctor_fees_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card"

                android:layout_marginLeft="@dimen/_16sdp"
                android:text="Fees"
                android:textColor="@android:color/darker_gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_doctor_fees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_doctor_fees_s"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="100 SAR"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/txt_doctor_fees"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/txt_date_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/v2"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="Available dates"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />

            <devs.mulham.horizontalcalendar.HorizontalCalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_date_s"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:background="#ffff"
                app:selectorColor="#c62828"
                app:sizeBottomText="20sp"
                app:sizeTopText="22sp"
                app:textColorNormal="#bababa"
                app:textColorSelected="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/btn_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/calendarView"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_48sdp"
                android:background="@color/colorPrimaryDark"
                android:foreground="?attr/selectableItemBackground"
                android:text="book now"
                android:textColor="#ffff" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>